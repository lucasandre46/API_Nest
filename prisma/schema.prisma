generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        BigInt?   @id @default(autoincrement())
  name      String?   @db.VarChar
  email     String?   @unique @db.VarChar
  senha     String?   @db.VarChar
  cpf       String?   @db.VarChar
  cep       String?   @db.VarChar
  id_music  BigInt[]? @db.BigInt

  @@map("users")
}

model music {
  id          BigInt? @id @default(autoincrement())
  time        String? @db.VarChar
  description String? @db.Text
  album       BigInt? @db.BigInt
  audio       String? @db.Text

  @@map("music")
}

model card {
  id          BigInt?  @id @default(autoincrement())
  description String?  @db.Text
  artist      String?  @db.VarChar
  img         String?  @db.Text
  valor       Float?   @db.Float8
  quantidade  Float?   @db.Float4
  data        String?  @db.VarChar

  @@map("card")
}